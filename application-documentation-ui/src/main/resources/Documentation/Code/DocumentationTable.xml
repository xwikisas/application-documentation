          &lt;th class="hidden"&gt;&lt;/th&gt;
        &lt;/tr&gt;
      &lt;/thead&gt;
      &lt;tbody&gt;
        #displayTableSections($services.model.resolveDocument($root))
      &lt;/tbody&gt;
    &lt;/table&gt;
  {{/html}}
{{/velocity}}</code>
